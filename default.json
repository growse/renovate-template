{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableRateLimiting",
    ":rebaseStalePrs",
    ":disableDependencyDashboard",
    "helpers:pinGitHubActionDigests"
  ],
  "assignees": ["growse"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "recreateWhen": "never",
  "internalChecksFilter": "strict",
  "pre-commit": {
    "enabled": true
  }
}
